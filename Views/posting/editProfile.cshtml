@model WebProject.Models.userProfile 
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <link rel="stylesheet" href="~/css/edit.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js'></script>

</head>
<body>
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        <nav class="nav nav-borders">
            <a class="nav-link active ms-0" href="https://www.bootdey.com/snippets/view/bs5-edit-profile-account-details" target="__blank">Edit Profile</a>
        </nav>
        <hr class="mt-0 mb-4">
        <div class="row">
                    <div class="col-xl-4">
                        <!-- Profile picture card-->
                        <div class="card mb-4 mb-xl-0">
                            <div class="card-header">Profile Picture</div>
                            <form action="/posting/addProfilePicture" method="post" enctype="multipart/form-data">
                                <div class="card-body text-center">
                                    <!-- Profile picture image-->
                                    <img class="img-account-profile rounded-circle mb-2" src="@Url.Content("~/" + Model.profilePath)" alt="Profile">
                                            <!-- Profile picture help block-->
                                            @* <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div> *@
                                            <!-- Profile picture upload button-->
                                            <input class="ms-5 mb-3" type="file" name="image">
                                            <button class="btn btn-primary" type="submit">Upload new image</button>
                                </div>
                            </form>
                        </div>
                    </div> 
                    <div class="col-xl-8">
                        <!-- Account details card-->
                        <div class="card mb-4">
                            <div class="card-header">User Details</div>
                            <div class="card-body">
                                <form method="post" action="/posting/editProfile">
                                <input type="hidden" name="Id" value="@Model.Id">
                                    <!-- Form Group (username)-->
                                    <div class="mb-3">
                                        <label class="small mb-1" for="inputUsername">Username  (how your name will appear to other users on the site)</label>
                                <h2 class="form-control" id="inputUsername" name="UserName"> @Model.UserName</h2>
                                    </div>
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (first name)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputFirstName">First name</label>
                                    <input required class="form-control" id="inputFirstName" type="text" placeholder="" value="@Model.Fname" name="Fname">
                                        </div>
                                        <!-- Form Group (last name)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputLastName">Last name</label>
                                    <input class="form-control" id="inputLastName" type="text" placeholder="" value="@Model.Lname" name="Lname">
                                        </div>
                                    </div>
                                    <!-- Form Row        -->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (organization name)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputOrgName">Organization name</label>
                                    <input required class="form-control" id="inputOrgName" type="text" placeholder="" value="@Model.OrganizationName" name="OrgName">
                                        </div>
                                        <!-- Form Group (location)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputLocation">Country</label>
                                    <input required class="form-control" id="inputLocation" type="text" placeholder="" value="@Model.country" name="country">
                                        </div>
                                    </div>
                                    <!-- Form Group (email address)-->
                                    <!-- Form Row-->
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (phone number)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputPhone">Phone number</label>
                                    <input class="form-control" id="inputPhone" type="tel" placeholder="" value="@Model.PhoneNumber" name="phone">
                                        </div>
                                        <!-- Form Group (birthday)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputBirthday">Birthday</label>
                                    <input class="form-control" id="inputBirthday" type="date" name="DOB" placeholder="" value="@Model.DOB">
                                        </div>
                                    </div>
                                    <div class="row gx-3 mb-3">
                                        <!-- Form Group (phone number)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputPhone">Lives</label>
                                    <input class="form-control" id="text" type="text" placeholder="" value="@Model.lives" name="lives">
                                        </div>
                                        <!-- Form Group (birthday)-->
                                        <div class="col-md-6">
                                            <label class="small mb-1" for="inputBirthday">Department</label>
                                    <input required class="form-control" id="company" type="text" name="depart" placeholder="" value="@Model.department">
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="small mb-1" for="inputEmailAddress">About</label>
                                        <input required class="form-control" type='text' maxlength="100" minlength="20" placeholder="" value="@Model.about" name="about" >
                                    </div>
                                    <input type="hidden" name="profilePath" value="@Model.profilePath">
                                    <!-- Save changes button-->
                                    <button  class="btn btn-primary" type="submit">Save changes</button>
                                </form>
                            </div>
                        </div>
                    </div>
        </div>
    </div>
</body>
</html>