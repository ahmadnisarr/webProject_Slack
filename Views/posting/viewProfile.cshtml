@model WebProject.Models.userProfile
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/edit.css">
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css'>

    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/js/bootstrap.bundle.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js'></script>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css">
    <title>ViewProfile</title>
</head>
<body>
  
    <section style="background-color: #eee;">
        <div class="container py-5">
                <div class="row">
                    <div class="col">
                    <nav aria-label="breadcrumb" class="bg-body-tertiary  rounded-5 p-3 mb-4 text-center display-3 text-white" style="background-color:purple;">
                          <p>User Details</p>
                        </nav>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="card mb-4">
                            <div class="card-body text-center justify-content-center mt-3">
                            <img src="@Url.Content("~/" + Model.profilePath)" alt="profile"
                                     class="rounded-circle img-fluid" style="width: 200px;">
                                <h5 class="my-3 display-6">@Model.UserName</h5>
                                <p class="text-muted mb-1">@Model.lives</p>
                                <p class="text-muted mb-4">@Model.country</p>
                                <!-- <div class="d-flex justify-content-center mb-2">
                                    <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary">Follow</button>
                                    <button  type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary ms-1">Message</button>
                                </div> -->
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 text-center">
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">User Name </h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.UserName</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">First Name</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.Fname</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Last Name</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.Lname</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Organization Name</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.OrganizationName</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Country</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.country</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Mobile</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.PhoneNumber</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">DOB</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.DOB</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Lives</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.lives</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">Department</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.department</p>
                                    </div>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-sm-3">
                                        <h6 class="mb-0">About</h6>
                                    </div>
                                    <div class="col-sm-9">
                                        <p class="text-muted mb-0">@Model.about</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                </div>   
        </div>
    </section>






</body>
</html>

















































